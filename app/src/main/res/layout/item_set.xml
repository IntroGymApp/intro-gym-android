<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/shape_rounded_plate_filled"
    android:layout_marginBottom="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_number_of_set"
        style="@style/Widget.IntroGym.ListCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:backgroundTint="?attr/igPrimaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/tv_number_of_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="№1"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:textColor="?attr/igCardBackgroundColor"
            android:textAppearance="@style/TextAppearance.IntroGym.Footnote.Regular"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_set_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:paddingHorizontal="10dp"
        android:textAppearance="@style/TextAppearance.IntroGym.Footnote.Regular"
        app:layout_constraintBottom_toBottomOf="@+id/cv_number_of_set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_number_of_set"
        app:layout_constraintTop_toTopOf="@+id/cv_number_of_set"
        tools:backgroundTint="?attr/igPrimaryColor"
        tools:text="15 x 20кг • 00:00:00 • 1000м"
        tools:textColor="?attr/igPrimaryColor" />

</androidx.constraintlayout.widget.ConstraintLayout>