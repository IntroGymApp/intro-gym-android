<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- APP COMPONENTS -->

    <style name="Widget.IntroGym.TagItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_background_tag_item</item>
        <item name="android:textColor">@drawable/selector_text_tag_item</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Body.Regular</item>
    </style>

    <style name="Widget.IntroGym.ListCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:padding">20dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:backgroundTint">?attr/igCardBackgroundColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.IntroGym.ListCard.Selectable">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.IntroGym.TipItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/shape_rounded_plate</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Body.Regular</item>
    </style>

    <style name="Widget.IntroGym.TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">256</item>
        <item name="android:inputType">textShortMessage</item>
        <item name="android:textColorHint">?attr/igHintColor</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:background">@null</item>
        <item name="drawableTint">?attr/igHintColor</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Body.Regular</item>
    </style>

    <style name="Widget.IntroGym.Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Body.Bold</item>
    </style>

    <style name="Widget.IntroGym.Button.Rounded">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Widget.IntroGym.Button.Black">
        <item name="backgroundTint">?attr/igTextPrimaryColor</item>
    </style>

    <style name="Widget.IntroGym.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Body.Bold</item>
        <item name="android:textColor">?attr/igTextButtonColor</item>
    </style>

    <style name="Widget.IntroGym.TextButton.Orange">
        <item name="android:textColor">?attr/igWarningColor</item>
    </style>

    <style name="Widget.IntroGym.TextButton.Red">
        <item name="android:textColor">?attr/igErrorColor</item>
    </style>

    <style name="Widget.IntroGym.TextButton.Black">
        <item name="android:textColor">?attr/igTextPrimaryColor</item>
    </style>

    <style name="Widget.IntroGym.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconTint">?attr/igIconStaticColor</item>
    </style>

    <style name="Widget.IntroGym.IconButton.Filled" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconTint">?attr/igOnPrimaryColor</item>
    </style>

    <style name="Widget.IntroGym.SegmentedButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">?attr/igPrimaryColor</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.IntroGym.SegmentButton</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.IntroGym.CheckedButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconGravity">textTop</item>
        <item name="backgroundTint">@color/selector_selectable_button_background</item>
        <item name="iconTint">@color/selector_selectable_button_foreground</item>
        <item name="iconSize">30dp</item>
    </style>

    <style name="Widget.IntroGym.IconButton.Primary">
        <item name="iconTint">?attr/igIconActionColor</item>
    </style>

    <style name="Widget.IntroGym.DatePickerSpinner" parent="@android:style/Widget.DatePicker">
        <item name="android:headerDayOfMonthTextAppearance">@style/TextAppearance.IntroGym.Body.Regular</item>
        <item name="android:headerMonthTextAppearance">@style/TextAppearance.IntroGym.Body.Regular</item>
        <item name="android:headerYearTextAppearance">@style/TextAppearance.IntroGym.Body.Regular</item>
        <item name="theme">@style/ThemeOverlay.NumberPicker</item>
    </style>

    <style name="Widget.IntroGym.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/igBackgroundColor</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.IntroGym.Body.BottomBarLabel</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.IntroGym.Body.BottomBarLabel</item>
    </style>

    <style name="Widget.IntroGym.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.IntroGym.Body.Semibold</item>
    </style>

    <style name="Widget.IntroGym.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">?attr/igBackgroundColor</item>
    </style>

    <style name="Widget.IntroGym.Button.Segmented" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">?attr/igHintColor</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Footnote.Regular</item>
    </style>

    <!-- CONTAINERS -->

    <style name="Container.IntroGym.ScrollView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- TEXT STYLES -->

    <style name="Widget.IntroGym.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">20dp</item>
    </style>

    <style name="Widget.IntroGym.TextView.Body" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.IntroGym.TextView.Error" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.IntroGym.Footnote.Regular</item>
        <item name="android:textColor">?attr/igErrorColor</item>
    </style>


    <!-- Theme Overlays -->

    <style name="ThemeOverlay.IntroGym.SegmentButton" parent="ThemeOverlay.Material3.Button.IconButton.Filled">
        <item name="colorOnContainerUnchecked">?attr/igHintColor</item>
        <item name="colorOnContainer">?attr/igOnPrimaryColor</item>
        <item name="colorContainer">?attr/igPrimaryColor</item>
        <item name="colorSurfaceContainerHighest">?attr/igCardBackgroundColor</item>
    </style>

    <style name="ThemeOverlay.IntroGym.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.IntroGym.BottomSheet</item>
    </style>

    <style name="ThemeOverlay.NumberPicker" parent="">
        <item name="android:fontFamily">@font/geist_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">?attr/igTextPrimaryColor</item>
        <item name="android:colorControlNormal">?attr/igPrimaryColor</item>
    </style>

    <style name="ThemeOverlay.IntroGym.CheckedButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorOnContainer">@color/selector_selectable_button_foreground</item>
        <item name="colorContainer">@color/selector_selectable_button_background</item>
    </style>

</resources>